{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}


{% block body %}
    <h1>Article</h1>

    <a class="btn btn-dark text-white mt-2 col" href="{{ path('app_article_index') }}">back to list</a>


    {{ include('flash.html.twig') }}

    <div>
        <div class="row justify-content-center">

            <h2 class="row justify-content-center"> {{ article.title }} </h2>

            {% if article.picture is empty %}
                <img class="col-md-4" src="{{ asset('/uploads/articles/default.jpg' ) }}" alt="{{article.descritpion}}" title="{{article.title}}">
            {% else %}
                <img class="col-md-4" src="{{ asset('/uploads/articles/' ~ article.picture) }}" alt="{{article.descritpion}}" title="{{article.title}}">
            {% endif %}

            <p class="row justify-content-center"> {{ article.descritpion }} </p>
    
        </div>


        {% if app.user is not null %}
            {{ include('comments/index.html.twig') }}
        {% endif %}
    </div>


    {% if app.user and 'ROLE_ADMIN' in app.user.getroles()  %}
        
        <a class="btn btn-success" href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a> 
    
        {{ include('article/_delete_form.html.twig') }}

    {% endif %} 

   
{% endblock %}
